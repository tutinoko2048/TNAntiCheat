{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "env": {
      "node": true,
      "es2021": true
    },
    "ignorePatterns": ["scripts/lib/timer.js", "scripts/lib/toJson.js", "scripts/util/secret.js"],
    "globals": {},
    "rules": {
      "no-unused-vars": "off",
      "no-empty": "off",
      "block-spacing": "warn",
      "arrow-spacing": "warn",
      "space-before-blocks": "warn",
      "keyword-spacing": "warn",
      "no-irregular-whitespace": "off"
    },
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    }
}
